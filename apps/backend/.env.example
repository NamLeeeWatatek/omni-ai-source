# ============================================
# üîê ENCRYPTION CONFIGURATION (REQUIRED!)
# ============================================
# This key is used to encrypt sensitive data like API keys
# IMPORTANT: Generate a secure 32-byte key using:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# ‚ö†Ô∏è  NEVER commit this key to version control!
# ‚ö†Ô∏è  Use different keys for dev/staging/production!
#
ENCRYPTION_KEY=your-secure-64-character-hex-key-here-generate-with-command-above

# ============================================
# ü§ñ AI PROVIDER API KEYS (Optional)
# ============================================
# These are fallback keys if users don't configure their own
# Users can override these in Settings > AI Providers
#
GOOGLE_API_KEY=your-google-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================
# üìä DATABASE CONFIGURATION
# ============================================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_NAME=wataomi_db
DATABASE_SYNCHRONIZE=false
DATABASE_MAX_CONNECTIONS=100
DATABASE_SSL_ENABLED=false
DATABASE_REJECT_UNAUTHORIZED=false
DATABASE_CA=
DATABASE_KEY=
DATABASE_CERT=

# ============================================
# üîë JWT & AUTH
# ============================================
AUTH_JWT_SECRET=your-jwt-secret-key-here
AUTH_JWT_TOKEN_EXPIRES_IN=15m
AUTH_REFRESH_SECRET=your-refresh-secret-key-here
AUTH_REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# üåê APPLICATION
# ============================================
NODE_ENV=development
APP_PORT=3001
APP_NAME="Wataomi"
API_PREFIX=api/v1
APP_FALLBACK_LANGUAGE=en
APP_HEADER_LANGUAGE=x-custom-lang

FRONTEND_DOMAIN=http://localhost:3000
BACKEND_DOMAIN=http://localhost:3001

# ============================================
# üìß EMAIL (Optional)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_IGNORE_TLS=false
MAIL_SECURE=false
MAIL_REQUIRE_TLS=true
MAIL_DEFAULT_EMAIL=noreply@example.com
MAIL_DEFAULT_NAME=Wataomi
MAIL_CLIENT_PORT=1025

# ============================================
# üóÇÔ∏è FILE UPLOAD (Optional)
# ============================================
FILE_DRIVER=local
ACCESS_KEY_ID=
SECRET_ACCESS_KEY=
AWS_S3_REGION=
AWS_DEFAULT_S3_BUCKET=

# ============================================
# üîí SECURITY
# ============================================
# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# ============================================
# üìù LOGGING
# ============================================
LOG_LEVEL=debug
